
<div class="container">

  <h1 class="text-center mt-4">New Game</h1>
  <ul class="list-group list-group-horizontal-md row justify-content-md-center">
  <% @letters.each do |x| %>
  <li class="list-group-item list-group-item-primary m-2 shadow fs-4 text-light col-md-1 col-1 text-center bg-info"> <%= x.upcase %> </li>
  <% end %>
  </ul>


  <div class="input-group input-group-sm mb-3 row pt-4 text-center">
      <p class="text-secondary">Whats the longest word you can find ?</p>
      <form action="/score" method="post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="word" >
        <input class="btn btn-outline-secondary" type="submit" value="Ask!">
        <%= hidden_field_tag :letters, @letters %>
      </form>
  </div>

</div>
